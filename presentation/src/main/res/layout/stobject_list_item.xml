<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <data>

        <variable
            name="stObject"
            type="lv.st.sbogdano.domain.model.StObject" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stobject_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/object_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@{stObject.name}"
                app:layout_constraintBottom_toBottomOf="@+id/object_city_region"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/object_city_region"
                tools:text="A/st.105"/>

        <TextView
                android:id="@+id/object_city_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@{stObject.city_region}"
                app:layout_constraintBottom_toBottomOf="@+id/drive_btn"
                app:layout_constraintTop_toTopOf="@+id/drive_btn"
                tools:text="Tukuma nov."
                app:layout_constraintStart_toStartOf="@+id/guideline3"/>

        <Button
                android:id="@+id/drive_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/drive_btn_label"
                app:layout_constraintBottom_toBottomOf="@+id/object_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/object_name"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline3"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.33"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>